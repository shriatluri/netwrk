# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkedin_networking

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=linkedin-networking-storage

# JWT
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Service Ports
USER_SERVICE_PORT=8001
PROFILE_SERVICE_PORT=8002
COMPANY_SERVICE_PORT=8003
RECOMMENDATION_SERVICE_PORT=8004
CONNECTION_SERVICE_PORT=8005
ANALYTICS_SERVICE_PORT=8006

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
